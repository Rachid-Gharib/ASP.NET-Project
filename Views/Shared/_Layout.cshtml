<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="w3-container">
        <div class="w3-bar w3-border w3-light-grey w3-center">
            <a style="width:20%" class="w3-bar-item w3-button w3-mobile" href="Index">Accueil</a>
            <a style="width:20%" class="w3-bar-item w3-button w3-mobile" href="Ajouter">Nouveau membre</a>
            <a style="width:20%" class="w3-bar-item w3-button w3-mobile" href="ListerTout">Liste des membres</a>
            <a style="width:20%" class="w3-bar-item w3-button w3-mobile" href="#">Modifier un membre</a>
            <a style="width:20%" class="w3-bar-item w3-button w3-mobile" href="#">Enlever un membre</a>
        </div>
    </nav>
    <div class="w3-container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")  
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts",required: false)
</body>
</html>
