<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="w3-container">
        <ul class="w3-navbar w3-border w3-light-gray">
            <li><a class="w3-hover-red" href="Index">Accueil</a></li>
            <li><a class="w3-hover-blue" href="Ajouter">Nouveau membre</a></li>
            <li><a class="w3-hover-green" href="ListerTout">Liste des membres</a></li>
            <li><a class="w3-hover-teal" href="#">Modifier un membre</a></li>
            <li><a class="w3-hover-yellow" href="#">Enlever un membre</a></li>
        </ul>
        
    </div>
    <div class="w3-container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
